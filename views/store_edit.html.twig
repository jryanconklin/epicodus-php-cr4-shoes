{% include 'header.html.twig' %}
            <div class="pageHead">
                <h2>Welcome to shoeCONNECT</h2>
                <small class="text-muted">An Interactive Shoe Management System by styleTech Inc.</small>
            </div>

            <div class="mainSection row">
                <h4>Update Info on {{ store.getName }}</h4>
                <div class="edit-form">
                    <form action="/stores/{{ store.getId }}" method="post">
                        <input name="_method" type="hidden" value="patch">
                        <label for="name">Rename {{ store.getName }}</label>
                        <input id="name" name="name" type="text">
                        <button class="btn btn-success" type="submit">Update</button>
                    </form>
                    <br>
                    <form action="/" method="get">
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">Go Home</button>
                        </div>
                    </form>
                </div>
                <hr>
                <form action="/stores/{{ store.getId }}" method="post">
                    <input name="_method" type="hidden" value="delete">
                    <button class="btn btn-danger" type="submit">Delete this Store</button>
                </form>
                <hr>
            </div>

