{% include 'header.html.twig' %}
            <div class="pageHead">
                <h2>Welcome to shoeCONNECT</h2>
                <small class="text-muted">An Interactive Shoe Management System by styleTech Inc.</small>
            </div>
            <div class="mainSection">
                <div class="row">
                {% if brands is not empty %}
                    <h4>Brands for {{store.getName}}</h4>
                    <div class="col-sm-3">
                    </div>
                    <div class="list-group col-sm-6">
                        <ul>
                            {% for brand in brands %}
                                <li class="list-group-item">{{ brand.getName }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="col-sm-3">
                    </div>
                    <div class="col-sm-12">
                        <form action="/stores/{{store.getId}}/edit" method="get">
                            <button class="btn btn-success" type="submit">Edit this Store</button>
                        </form>
                    </div>
                {% else %}
                    <h3>No Brands Quite Yet</h3>
                {% endif %}
                </div>
                <hr>
                <h4>Add a Brand to {{ store.getName }}</h4>
                <form action="/add_brands" method="post" class="form-inline add-data">
                    <div class="form-group">
                        <input id="store_id" type="hidden" name="store_id" value="{{ store.getId }}">
                        <label for="name">Brand Name</label>
                        <select class="form-control" id="brand_id" name="brand_id" type="text">
                            {% for brand in all_brands %}
                                <option value="{{ brand.getId }}">{{ brand.getName }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Add Brand</button>
                    </div>
                </form>
                <hr>
            </div>

            <form action="/" method="get">
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Go Home</button>
                </div>
            </form>

{% include 'footer.html.twig' %}
