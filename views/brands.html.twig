{% include 'header.html.twig' %}
            <div class="pageHead">
                <h2>Welcome to shoeCONNECT</h2>
                <small class="text-muted">An Interactive Shoe Management System by styleTech Inc.</small>
            </div>
            <div class="mainSection">
                {% if brands is not empty %}
                <div class="row">
                    <h4>Available Brands</h4>
                    <hr>
                    <div class="col-sm-3">
                    </div>
                    <div class="list-group col-sm-6">
                        {% for brand in brands %}
                        <ul>
                            <li class="list-group-item"><a class="list-group-item-action" href="/brands/{{ brand.getId }}">{{ brand.getName }}</a></li>
                        </ul>
                        {% endfor %}
                    </div>
                {% else %}
                    <h3>No Brands Quite Yet</h3>
                {% endif %}
                </div>
                <hr>
                <form action="/brands" method="post" class="form-inline">
                    <div class="form-group">
                        <label for="name">Brand Name</label>
                        <input id="name" name="name" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Add Brand</button>
                    </div>
                </form>
                <br>
                <form action="/" method="get">
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Go Home</button>
                    </div>
                </form>
                <hr>
                <form action="/delete_brands" method="post">
                    <div class="form-group">
                        <button class="btn btn-danger" type="submit">Delete All Brands</button>
                    </div>
                </form>
            </div>


{% include 'footer.html.twig' %}
